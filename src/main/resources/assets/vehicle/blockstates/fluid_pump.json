{
    "multipart": [
        {
            "when": { "facing": "up" },
            "apply": { "model": "vehicle:block/fluid_pump", "x": -90 }
        },
        {
            "when": { "facing": "down" },
            "apply": { "model": "vehicle:block/fluid_pump", "x": 90 }
        },
        {
            "when": { "facing": "north" },
            "apply": { "model": "vehicle:block/fluid_pump", "y": 0 }
        },
        {
            "when": { "facing": "east" },
            "apply": { "model": "vehicle:block/fluid_pump", "y": 90 }
        },
        {
            "when": { "facing": "south" },
            "apply": { "model": "vehicle:block/fluid_pump", "y": 180 }
        },
        {
            "when": { "facing": "west" },
            "apply": { "model": "vehicle:block/fluid_pump", "y": 270 }
        },
        {
            "when": { "up": "true" },
            "apply": { "model": "vehicle:block/fluid_pipe_connection", "x": -90 }
        },
        {
            "when": { "down": "true" },
            "apply": { "model": "vehicle:block/fluid_pipe_connection", "x": 90 }
        },
        {
            "when": { "north": "true" },
            "apply": { "model": "vehicle:block/fluid_pipe_connection", "y": 0 }
        },
        {
            "when": { "east": "true" },
            "apply": { "model": "vehicle:block/fluid_pipe_connection", "y": 90 }
        },
        {
            "when": { "south": "true" },
            "apply": { "model": "vehicle:block/fluid_pipe_connection", "y": 180 }
        },
        {
            "when": { "west": "true" },
            "apply": { "model": "vehicle:block/fluid_pipe_connection", "y": 270 }
        }
    ]
}